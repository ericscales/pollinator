{
  "name": "pollinator",
  "version": "1.0.0",
  "description": "A lightweight node/browser polling library",
  "main": "index.js",
  "dependencies": {
    "fbemitter": "^2.1.1"
  },
  "devDependencies": {
    "@types/fbemitter": "^2.0.32",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.15.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "pinst": "^2.1.2",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "test": "./node_modules/.bin/jest",
