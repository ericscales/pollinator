{
  "name": "pollinator",
  "version": "0.2.0",
  "description": "A lightweight node/browser polling machine",
  "main": "dist/index.js",
  "unpkg": "dist/index.umd.min.js",
  "jsnext:main": "dist/index.module.js",
  "module": "dist/index.module.js",
  "types": "types/index.d.ts",
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/fbemitter": "^2.0.32",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.15.0",
    "husky": "^5.0.6",
    "jest": "^26.6.3",
    "pinst": "^2.1.2",
    "prettier": "^2.2.1",
    "rollup": "^2.38.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "test": "./node_modules/.bin/jest",
    "build": "./node_modules/.bin/rollup -c",
    "clean": "rm -rf dist",
    "lint": "./node_modules/.bin/eslint . --ext .ts,.js --quiet",
    "check-types": "tsc --noEmit",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable && npm run clean && npm run check-types && npm run lint && npm run test",
    "postpublish": "pinst --enable",
    "precommit:hook": "npm run lint && npm run test --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inspmoore/pollinator.git"
  },
  "keywords": [
    "poll",
    "poller",
    "pollinator",
    "polling"
  ],
  "author": "Lucas MÃ³rawski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inspmoore/pollinator/issues"
  },
  "homepage": "https://github.com/inspmoore/pollinator#readme",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(js|ts)"
    ]
  }
}
