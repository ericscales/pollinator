  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inspmoore/pollinator/issues"
  },
  "homepage": "https://github.com/inspmoore/pollinator#readme",
  "files": [
    "umd/"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
