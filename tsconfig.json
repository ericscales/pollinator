{
  "compilerOptions": {
    "target": "es6",
    "module": "umd",
    "declaration": true,
    "outDir": "./umd",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
